#
# SPEAr13XX Machine configuration file
#

if ARCH_SPEAR13XX

menu "SPEAr13xx Implementations"
config BOARD_SPEAR1300_EVB
	bool "SPEAr1300 Evaluation Board"
	select MACH_SPEAR1300
	help
	  Supports ST SPEAr1300 Evaluation Board

config BOARD_SPEAR1310_EVB
	bool "SPEAr1310 Evaluation Board"
	select MACH_SPEAR1310
	help
	  Supports ST SPEAr1310 Evaluation Board

config ENABLE_E1_INTERFACE_A
	depends on BOARD_SPEAR1310_EVB && SPEAR_HDLC
	bool "Enable onboard E1 interface A"

config ENABLE_E1_INTERFACE_B
	depends on BOARD_SPEAR1310_EVB && SPEAR_HDLC
	bool "Enable onboard E1 interface B"

config BOARD_SPEAR900_EVB
	bool "SPEAr900 Evaluation Board"
	select MACH_SPEAR900
	help
	  Supports ST SPEAr900 Evaluation Board

endmenu

config MACH_SPEAR1300
	bool "SPEAr1300"
	help
	  Supports ST SPEAr1300 Machine

config MACH_SPEAR1310
	bool "SPEAr1310"
	help
	  Supports ST SPEAr1310 Machine

config MACH_SPEAR900
	bool "SPEAr900"
	help
	  Supports ST SPEAr900 Machine

config SPEAR_DB9000
	bool "SPEAr DB9000 LCD"
	depends on FB_DB9000
	default y
	help
	  Support for DB9000 LCD device driver over SPEAr platform.

endif #ARCH_SPEAR13XX
